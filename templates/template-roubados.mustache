{{>partials/topo}}
<aside>
<div class="container">
  <div class="table-responsive d-block d-md-table">
    <table
      class="
        table-elemento
        table-roubados
        table
        table-striped
        table-hover
        table-bordered
        table-light
      "
    >
      <caption>
        VEÍCULOS rOUBADOS
      </caption>
      <thead  class="table-dark">
        <tr>
          <th scope="col">DONO</th>
          <th scope="col">PLACA</th>
          <th scope="col">STATUS</th>
          <th scope="col">NÍVEL DE URGÊNCIA</th>
          <th scope="col">LOCAL DO ROUBO</th>
          <th scope="col">Momento do disparo</th>
          <th scope="col">LOCAL DE DISPARO DO ALERTA</th>
        </tr>
      </thead>
      <tbody>
        {{#listagem_eh_valida}}
          {{#listagem}}
          <tr>
            <td>{{dono}}</td>
            <td>{{placa}}</td>
            <td>{{status}}</td>
            <td>{{nivel_urgencia}}</td>
            <td>{{local_roubo}}</td>
            <td>{{hora}}, {{data}}</td>
            <td>{{local_alerta}}</td>
          </tr>
          {{/listagem}}
        {{/listagem_eh_valida}}
      </tbody>
    </table>
  </div>
</div>
</aside>
{{>partials/fim}}