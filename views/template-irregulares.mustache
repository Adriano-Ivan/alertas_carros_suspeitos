{{>partials/topo}}
<aside>
<div class="container">
{{#usuario_adm}}<a href='/adicionar_irregular' style='color:rgb(8, 77, 8);font-weight:bold;text-transform:uppercase;text-decoration:none;text-align:left;width:77%'>Adicionar ocorrência</a>{{/usuario_adm}}
  <div class="table-responsive d-block d-md-table">
    <table
      class="
        table-elemento
        table-irregulares
        table
        table-hover
        table-bordered
        table-striped
        table-dark
      "
    >
      <caption>
        VEÍCULOS EM SITUAÇÃO IRREGULAR
      </caption>
      <thead class="table-dark">
        <tr>
          <th>Dono</th>
          <th>placa</th>
          <th>status</th>
          <th>nível de urgência</th>
          <th>local de disparo do alerta</th>
          <th>Momento do disparo</th>
          <th>medida administrativa</th>
          {{#usuario_adm}}<th>Editar</th>{{/usuario_adm}}
          {{#usuario_adm}}<th>Excluir</th>{{/usuario_adm}}
        </tr>
      </thead>
      <tbody>
                {{#listagem_eh_valida}}
          {{#listagem}}
          <tr>
            <td>{{dono}}</td>
            <td style='text-transform:uppercase;'>{{placa}}</td>
            <td>{{status}}</td>
            <td>{{nivel_urgencia}}</td>
            <td>{{local_alerta}}</td>
            <td>{{hora}}, {{data}}</td>
            <td>{{medida_administrativa}}</td>
            {{#usuario_adm}}<td style='padding:20px;'><form action="/update_r_irregular_page/" method='GET'enctype="application/x-www-form-urlencoded" role='form'><input type='number' class='desaparecer' name='id-registro-irregular'value={{id}}><button class="btn btn-success"class='edicao-irregular'>↘</button></form></td>{{/usuario_adm}}
